import random
import time

number = random.randint(1,100)

def intro():
    print("May i ask you for your name?")

    global name
    name = input()
    print(name + ", we are going to play a game. i am thinking of a number between 1 and 100")
    if (number %2 ==0):
        x = 'even'
    else:
        x = 'odd'
    print("this( is an {} number", x )
    time.sleep (.5)
    print("go ahead! guess!")

def pick():
    guessesstaken = 0

    while guessesstaken <7:
        time.sleep(.25)
        enter = input("guess: ")

        try: 

            guess = int(enter)

            if guess <= 100 and guess>= 1:
                guessesstaken == guessesstaken+1
                if guess< number:
                    print("the number that you have entered is low")
                if guess> number:                   
                    print("the number that you have entered is high")
                if guess == number:
                    break 
                if guess!= number:
                        time.sleep(.5)
                        print("try again")

            if guess >100 or guess<1:
                print("silly goose! that number isnt in the range!")
                time.sleep(.25)
                print("please enter number between 1 and 100")
        except:
            print("i dont think that"+enter+"is a number. sorry!")
    if guess == number:
        guessesstaken = str(guessesstaken)
        print("good job",name,"! you guessed my number in", guessesstaken,"guessess!")
        
    if guess != number:
        ("nope, the number i was thinking was"+str(number))


playagain = 'yes'
while playagain == 'yes' or playagain == 'y' or playagain =='Yes':
    intro()
    pick()
    print("do you want to play again?")
    playagain = input()
